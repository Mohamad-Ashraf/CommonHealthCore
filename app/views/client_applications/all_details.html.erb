<h1>Application Details</h1>

<%= form_for @client_application, url: save_all_details_path, method: :post,:html => { :multipart => true } do |f| %>


    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, id: :client_name %>
    </div>

    <div class="field">
      <%= f.label :application_url %>
      <%= f.text_field :application_url, id: :application_url %>
