<h1>Super Duper Master </h1>

<table class="table table-responsive table-bordered user-display">
  <thead>
    <tr>
      <th>URL</th>
      <th>Organization</th>
      <th>Status</th> 
      <th>Approve</th>
      <th>Reject</th>
      <th>See More</th>
    </tr>
  </thead>
  <tbody>
    <% i  = 1 %>
    <% @result.each do |x| %>
    <% i += 1 %>
      <tr>
      <td><%= x["url"] %></td>
      <td><%= x["organizationName"]["organizationName_Text"] if x["organizationName"]%></td>
      <td> <%= x['status'] %> </td> 
      <td><%= link_to "Approve", '#', class: "approve_rule", id: "#{i}", :remote => true %> </td>
      <td><%= link_to "Reject", '#', class: "reject_rule", id: "#{i}", :remote => true %></td>
      <td><%= link_to "See More", get_contact_management_path(org_url: x["url"] ), { method: :post ,:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="modal-window" class="modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>