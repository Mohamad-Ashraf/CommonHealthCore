<h1>New Client Application</h1>

<%#= render 'form', client_application: @client_application %>


<%= form_for @client_application do |f| %>
    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :application_url %>
      <br/>
      <%= f.text_field :application_url %>
    </div>

    <h3>Users</h3>
    <%= f.fields_for :user do |u| %>
        <%= u.text_field :name, :placeholder => "Name" %>
        <%= u.text_field :email, :placeholder => "Email" %>
    <% end %>


    <%= f.submit 'Save' %>


<% end %>

<%= link_to 'Back', client_applications_path %>

