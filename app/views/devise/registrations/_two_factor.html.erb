<% if current_user.otp_required_for_login? %>
	<div>
		<%= link_to 'Disable', two_factor_path, method: :delete, remote: true, class: "btn btn-danger" %>
	</div>


	<% if @codes %>
		<div>
			<% @codes.each do |x| %>
				<div><strong><%= x %></strong></div>
			<% end %>
		</div>
	<% end %>

<% else %>


	<div>
		<%= link_to 'Enable', two_factor_path, method: :post, remote: true, class: "btn btn-success" %>
	</div>
<% end %>