<h1>Notification Rules</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notification_rules.each do |notification_rule| %>
      <tr>
        <td><%= link_to 'Show', notification_rule %></td>
        <td><%= link_to 'Edit', edit_notification_rule_path(notification_rule) %></td>
        <td><%= link_to 'Destroy', notification_rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

