<%if @client_responses.nil?%>
  <%= form_for @question_response , url: save_question_response_path, method: :post, :remote => true do |f| %>


    <%@questions.each do |q|%>
      <div class="field">
        <%= label_tag q.question %><br>
        <%#= f.radio_button("question_response", "question_response", "yes") %>
        <%= radio_button_tag q.question.parameterize.underscore, 'yes'%>
        <%= label_tag "Yes"%>
        <%= radio_button_tag q.question.parameterize.underscore, 'no'%>
        <%= label_tag "No"%>
        <%#= f.radio_button("question_response", "question_response", "no") %>

      </div><br>
    <%end%>
      <%= hidden_field_tag :client_application_id, @customer_id%>
      <div class="actions">
        <%= f.submit %>
      </div>

  <% end %>

  <div id="agreement_template" class="">

  </div>
<%else %>

    <h1>Submit Agreement</h1>

    <%= form_for @client_application, url: save_all_details_path, method: :post,:html => { :multipart => true } do |f| %>

        <div class="field">
          <%= f.label :agreement_type %>
          <%= f.select :agreement_type, ['CE-A', 'CE-B', 'BA-1', 'BA-B']%>
        </div>
        <div class="field">
          <%= f.file_field :client_agreement%>
        </div>


        <div>
          <%= f.label :signed_documents%><br>
          <%if !@client_application.client_agreement.url.nil? %>
              <%=  link_to @client_application.client_agreement.url.split('/')[-1], @client_application.client_agreement.url, target: '_blank'  %>
          <%end%>

        </div>

        <div>
          <%= f.submit 'Save' %>
        </div>

    <%end %>

<%end%>
