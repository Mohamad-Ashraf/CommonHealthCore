<h1>Invite New User</h1>

<%= form_for @user , url: create_user_path, method: :post do |f |%>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, id: :name %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, id: :email %>
    </div>
    <div class="field">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number  %>
    </div>

    <div class="field">
      <%= f.label :roles %>
      <%#= f.select :role_id, options_from_collection_for_select(@roles, 'id', 'role_name') %>
      <% @roles.each do |role|%>
          <%= f.check_box  :roles,{multiple: true}, role.id.to_s, false%>
          <%= role.role_name  %>
      <%end%>
    </div>



    <%= f.submit 'Create User' %>
<%end%>